<Window x:Class="StartingScreen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StartingScreen"
        mc:Ignorable="d"
        Title="Welcome" Height="450" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="White">
    
    <Window.Resources>
        <Style x:Key="BasicButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="0,8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EEEEEE"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <!-- Top tekstas -->
            <TextBlock Text="Interactive Neural Network" 
                       FontSize="24" 
                       FontWeight="Normal"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"
                       Foreground="Black"/>
            
            <!-- Buttons -->
            <Button Content="Create New Project" 
                    Style="{StaticResource BasicButtonStyle}"
                    Command="{Binding CreateNewProjectCommand}" />
            
            <Button Content="Open Existing Project" 
                    Style="{StaticResource BasicButtonStyle}"
                    Margin="0,15,0,0"
                    Command="{Binding OpenExistingProjectCommand}" />
            
            <!-- Labai reikalingas tekstas (essential)-->
            <TextBlock Text="Kas skaitys tas ..." 
                       FontSize="11" 
                       HorizontalAlignment="Center"
                       Margin="0,30,0,0"
                       Foreground="Gray"/>
        </StackPanel>
    </Grid>
</Window>
